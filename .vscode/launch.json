    "version": "0.2.0",
    "configurations": [
        {
            "name": "RAG (Biden) - PDF Query",
            "type": "debugpy",
            "request": "launch",
            "program": "src/RagQueryDoc.py",
            "console": "integratedTerminal",
            "args":  [ "-prompt", "How many jobs Joe Biden wants to create ?",
                       "-pdf", "data/Following is a transcript of President Biden.pdf"]
        },
        {
            "name": "RAG (Biden) - Build index",
            "type": "debugpy",
            "request": "launch",
            "program": "src/RagStoreDoc.py",
            "console": "integratedTerminal",
            "args":  [ "-faissname", "biden",
                       "-path", "./vstore/",
                       "-pdf", "data/Following is a transcript of President Biden.pdf"]
        },
        {
            "name": "RAG (Biden) - Query Index",
            "type": "debugpy",
            "request": "launch",
            "program": "src/RagQueryIndex.py",
            "console": "integratedTerminal",
            "args":  [ "-faissname", "biden",
                       "-path", "./vstore/",
                       "-prompt", "How many jobs Joe Biden wants to create ?"]
        }
    ]
}